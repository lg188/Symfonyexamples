{%- block form_errors -%}
    {%- if errors|length > 0 -%}
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Error!</strong>&nbsp;
        {%- for error in errors -%}
           {{ error.message }}</li>
        {%- endfor -%}
    </div>

    {%- endif -%}
{%- endblock form_errors -%}