{% extends 'base.html.twig' %}
{% block body %}

<div class="jumbotron">
    <h2>Please Login</h2>
</div>

{% if error %}
    <div class="alert alert-danger" role="alert">We have no match for that user and password.</div>
{% endif %}
{% if app.session.flashbag.has('succes') %}
    <div class="alert alert-success">
        {% for message in app.session.flashbag.get('succes') %}
            {{ message }}
        {% endfor %}
    </div>
{% endif %}
<form action="{{ path('login_check') }}" method="post">
    <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" id="email" name="_email" class="form-control"/>
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"
        class="form-control"/>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button type="submit" class="btn btn-lg btn-primary">Login</button>
</form>
{% endblock %}